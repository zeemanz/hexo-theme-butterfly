if hexo-config('preloader.enable') && hexo-config('preloader.source') != 2
  body.loaded
    position: relative

  #loading-box
    .loading-bg
      position: fixed
      display: flex
      width: 100%
      height: 100%
      background: var(--global-bg)
      opacity: 1
      z-index: 1001
      transition: all .5s

      .loading-img
        position: relative
        margin: auto
        width: 100px
        height: 100px
        border: 4px solid #f0f0f2
        border-radius: 50%
        background: convert(hexo-config('preloader.loading_img')) center no-repeat
        background-size: cover
        animation-duration: .5s
        animation-name: preloader-loading-animation
        animation-iteration-count: infinite
        animation-direction: alternate

        &__dot
          position: absolute
          top: 50%
          left: 50%
          width: 30px
          height: 30px
          border: 6px solid #fff
          border-radius: 50%
          background: #6bdf8f
          transform: translate(18px, 24px)

    &.loaded
      .loading-bg
        opacity: 0
        pointer-events: none

        .loading-img
          animation-play-state: paused

  @keyframes preloader-loading-animation
    0%
      opacity: 1

    100%
      opacity: .4
